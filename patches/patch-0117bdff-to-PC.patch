+	//eDebug("LIRC name=%s code=%d flags=%d", event->name, code, flags);
+	input->keyPressed(eRCKey(this, code, flags));
+	if (flags == eRCKey::flagMake) {
+		flags = eRCKey::flagBreak;
+		eDebug("LIRC name=%s code=%d flags=%d", event->name, code, flags);
+		input->keyPressed(eRCKey(this, code, flags));
